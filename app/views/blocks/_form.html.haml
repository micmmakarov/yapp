= form_for @block do |f|
  -if @block.errors.any?
    #error_explanation
      %h2= "#{pluralize(@block.errors.count, "error")} prohibited this block from being saved:"
      %ul
        - @block.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :start_time
    = f.number_field :start_time
  .field
    = f.label :end_time
    = f.number_field :end_time
  .field
    = f.label :video_id
    = f.number_field :video_id
  .field
    = f.label :answer_start
    = f.number_field :answer_start
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :notes
    = f.text_area :notes
  .actions
    = f.submit 'Save'
