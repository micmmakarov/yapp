= form_for @video, :html => {:multipart => true} do |f|
  -if @video.errors.any?
    #error_explanation
      %h2= "#{pluralize(@video.errors.count, "error")} prohibited this video from being saved:"
      %ul
        - @video.errors.full_messages.each do |msg|
          %li= msg


  .field
    =f.label :img
    = image_tag(@video.img_url) if @video.img?
    = f.file_field :img
    = f.hidden_field :img_cache

  .field
    = f.label :youtube
    = f.text_field :youtube
  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :interviewee_id
    = f.number_field :interviewee_id
  .actions
    = f.submit 'Save'
