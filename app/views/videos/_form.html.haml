= form_for @video do |f|
  -if @video.errors.any?
    #error_explanation
      %h2= "#{pluralize(@video.errors.count, "error")} prohibited this video from being saved:"
      %ul
        - @video.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :youtube
    = f.text_field :youtube
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :interviewee_id
    = f.number_field :interviewee_id
  .actions
    = f.submit 'Save'
